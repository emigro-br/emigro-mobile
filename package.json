{
  "name": "template-mobile",
  "description": "Template for building mobile apps with React Native.",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint \"src/{components,constants,hooks,navigation,screens,config}/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier --write \"src/{components,constants,hooks,navigation,screens}/**/*.{js,jsx,ts,tsx}\" \"config/**/*\"",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test": "jest --updateSnapshot",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "dependencies": {
    "expo": "~47.0.8",
    "expo-status-bar": "~1.4.2",
    "jest": "^26.6.3",
    "jest-expo": "^47.0.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-native-web": "~0.18.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/jest": "^29.2.3",
    "@types/react": "~18.0.14",
    "@types/react-native": "~0.70.6",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-universe": "^11.1.1",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "^2.8.0",
    "react-native-dotenv": "^3.4.2",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.6.3"
  },
  "private": true
}

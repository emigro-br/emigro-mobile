{
  "name": "emigro-mobile",
  "description": "Mobile App for Customers.",
  "version": "1.2.0",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "eslint src/",
    "format": "prettier --write src/ && eslint --fix src/",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test": "jest --updateSnapshot",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@gluestack-ui)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run format"
    ]
  },
  "dependencies": {
    "@gluestack-style/react": "^1.0.45",
    "@gluestack-ui/config": "^1.1.2",
    "@gluestack-ui/themed": "^1.1.3",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "amazon-cognito-identity-js": "^6.3.0",
    "expo": "~50.0.7",
    "expo-application": "~5.8.3",
    "expo-barcode-scanner": "~12.9.3",
    "expo-build-properties": "~0.11.1",
    "expo-camera": "~14.0.5",
    "expo-clipboard": "~5.0.1",
    "expo-secure-store": "~12.8.1",
    "expo-splash-screen": "~0.26.4",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.11",
    "jest-expo": "~50.0.2",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "react-native-dropdown-picker": "^5.4.6",
    "react-native-dropdown-select-list": "^2.0.4",
    "react-native-element-dropdown": "^2.10.1",
    "react-native-geocoding": "^0.5.0",
    "react-native-heroicons": "^3.2.0",
    "react-native-maps": "1.10.0",
    "react-native-modal": "^13.0.1",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.3.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^20.9.0",
    "@types/react": "~18.2.45",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^9",
    "eslint-config-universe": "^12",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-prettier": "^5",
    "husky": "9",
    "jest": "^29.7.0",
    "jest-mock-console": "^2.0.0",
    "lint-staged": "^15.2.2",
    "patch-package": "^8.0.0",
    "prettier": "^3",
    "react-native-dotenv": "^3.4.2",
    "react-test-renderer": "18.1.0",
    "tailwindcss": "3.3.2",
    "typescript": "^5.3.0"
  },
  "private": true
}

{
  "expo": {
    "name": "Emigro",
    "slug": "emigro-mobile",
    "owner": "emigro",
    "version": "2.7.0",
    "description": "The traveler's digital wallet",
    "orientation": "portrait",
    "scheme": "emigro",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "platforms": ["ios", "android", "web"],
    "plugins": [
      ["expo-camera", { "cameraPermission": "Access to the camera is required to scan QR codes for payments." }],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 34,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "emigro-5p"
        }
      ],
      "expo-secure-store",
      "expo-router",
      "expo-web-browser",
      "expo-localization",
      "expo-notifications"
    ],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#141414"
    },
    "updates": {
      "url": "https://u.expo.dev/d84d8915-cdac-448c-bf38-fc1ebcbe8eac",
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_LOAD"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "co.emigro.app",
      "bitcode": false,
      "associatedDomains": ["applinks:oauth.emigro.co"],
      "config": {
        "usesNonExemptEncryption": false
      },
"infoPlist": {
  "NSCameraUsageDescription": "Emigro needs camera access to scan QR codes and take photos for your profile.",
  "NSPhotoLibraryUsageDescription": "Emigro needs photo library access so you can choose a profile picture.",
  "NSPhotoLibraryAddUsageDescription": "Emigro may save images to your photo library when you choose to download or export them.",
  "NSLocationWhenInUseUsageDescription": "This app uses your location to provide personalized content.",
  "UIBackgroundModes": ["remote-notification"],
  "CFBundleURLTypes": [
    {
      "CFBundleURLSchemes": ["emigro"]
    }
  ]
}

    },
    "android": {
      "permissions": ["android.permission.CAMERA", "NOTIFICATIONS"],
      "package": "co.emigro.app",
"intentFilters": [
  {
    "action": "VIEW",
    "data": {
      "scheme": "emigro",
      "host": "*",
      "pathPrefix": "/"
    },
    "category": ["BROWSABLE", "DEFAULT"]
  }
]
    },
    "extra": {
      "eas": {
        "projectId": "d84d8915-cdac-448c-bf38-fc1ebcbe8eac"
      }
    },
    "runtimeVersion": "2.7.0"
  }
}
